<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flora.flora_labexer3.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:id="@+id/username_text"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/username_text"
        android:id="@+id/username_field"
        android:layout_alignBaseline="@+id/username_text"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_text"
        android:layout_below="@+id/username_text"
        android:layout_alignStart="@+id/username_text"
        android:layout_alignLeft="@+id/username_text"
        android:text="Password: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/password_field"
        android:layout_below="@+id/username_field"
        android:layout_alignStart="@+id/username_field"
        android:layout_alignLeft="@+id/username_field"
        android:layout_alignBaseline="@+id/password_text"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_text"
        android:layout_marginTop="50dp"
        android:id="@+id/TableLayout_view"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveSharedPreferences_button"
            android:text="Shared Preferences"
            android:onClick="saveInfo"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveInternalStorage_button"
            android:text="Internal Storage"
            android:onClick="displayInfo"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_button"
            android:text="Next"
            android:onClick="nextPage"/>
    </TableLayout>



</RelativeLayout>
